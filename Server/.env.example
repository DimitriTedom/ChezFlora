# ChezFlora Server Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# Server Configuration
PORT=5000
DEFAULT_API_PREFIX=/api/v1
NODE_ENV=development
CLIENT_BASE_URL="http://localhost:5173"

# Database Configuration (MongoDB)
MONGO_INITDB_ROOT_USERNAME=your_mongo_username
MONGO_INITDB_ROOT_PASSWORD=your_strong_password
MONGO_DB_NAME=chezflora
ME_CONFIG_MONGODB_ADMINUSERNAME=your_mongo_username
ME_CONFIG_MONGODB_ADMINPASSWORD=your_strong_password
ME_CONFIG_MONGODB_SERVER=your_mongo_server
ME_CONFIG_MONGODB_PORT=27017
ME_CONFIG_MONGODB_URL=mongodb://username:password@server:port/database

# Prisma Database URL (adjust according to your database)
DATABASE_URL="mongodb://username:password@server:port/database"

# JWT Configuration (Use strong, random secrets!)
JWT_SECRET=your_jwt_secret_at_least_32_characters_long_change_this
JWT_REFRESH_SECRET=your_refresh_secret_at_least_32_characters_long

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your-email@gmail.com
EMAIL_PASS="your-app-password"

# PayPal Configuration (for payments)
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret