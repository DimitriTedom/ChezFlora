{
  "name": "chezflora-tests",
  "version": "1.0.0",
  "description": "Test suite for ChezFlora API",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest --testNamePattern='Auth'"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ]
  }
}